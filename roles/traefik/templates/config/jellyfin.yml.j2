---
http:
  routers:
    jellyfin:
      rule: Host(`jellyfin.sladnet.xyz`)
      service: jellyfin
      tls:
        certResolver: letsencrypt
        domains:
          - main: "sladnet.xyz"
            sans:
              - "*.sladnet.xyz"
  services:
      jellyfin:
        loadBalancer:
          servers:
            - url: "http://{{hostvars.jellyfin.ansible_host}}:8096"